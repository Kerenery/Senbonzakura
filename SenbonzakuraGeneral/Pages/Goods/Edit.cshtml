@page
@model SenbonzakuraGeneral.Pages.Goods.EditModel
@{
    ViewData["Title"] = "Edit";
    var PhotoPath = $"/images/{Model.Good.PhotoPath ?? "standard.jpg"}";
}

<form method="post" class="mt-3" enctype="multipart/form-data">

    <input type="hidden" asp-for="Good.Id" />
    <input type="hidden" asp-for="Good.PhotoPath" />

    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <div class="card">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col col-lg-9">
                            <h4>Employee ID: @Model.Good.Id</h4><hr />
                            <div class="form-group row">
                                <label asp-for="Good.Type" class="col col-lg-4 col-form-label text-right">Edit Department:</label>
                                <div class="col-12 col-lg-6">
                                    <select asp-for="Good.Type" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<GoodsKinds>()">
                                        <option value="">Please Select</option>
                                    </select>
                                    <span asp-validation-for="Good.Type" class="text-danger"></span>
                                </div>
                            </div>
                            <hr/>
                        </div>
                        
                        <div class="col col-lg-3">
                            <div>
                                <img class="card-img-top border border-primary" src ="@PhotoPath"/>
                                <div class="custom-file">
                                    <input asp-for="Photo" class="custom-file-input form-control"/>
                                    <label class="custom-file-label text-left">Push</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card-footer text-center" style="background-color: rgba(0, 0, 0, 0.25);">
                                <button type="submit" class="btn btn-success buttonShadow">Update</button>
                                <a asp-page="index" class="btn btn-danger buttonShadow">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>